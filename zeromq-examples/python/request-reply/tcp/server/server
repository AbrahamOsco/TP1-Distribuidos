#!/usr/bin/python3
import time
import zmq

context = zmq.Context()
#Le pasamos un identificador, creamos un socket del tipo REPLY!. 
socket = context.socket(zmq.REP)
# todas las ip con el puerto 5555. Crea una conexion TCP con el Socket tcp
# NO existe el accept tampoco existen socket peers ðŸ¤¯.
#  
socket.bind("tcp://*:5555")

print("Starting ZMQ Server")

while True:
    #  Wait for next request from client
    message = socket.recv()
    print("Received request: %s" % message)

    #  Do some 'work'
    time.sleep(1)

    #  Send reply back to client
    socket.send(b"World")
